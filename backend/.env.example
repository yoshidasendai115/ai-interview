# Application Settings
APP_NAME="AI Interview Practice Platform"
APP_VERSION="0.1.0"
ENVIRONMENT=development
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=ai_interview

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Admin JWT (separate secret for admin authentication)
ADMIN_JWT_SECRET_KEY=admin-super-secret-key-at-least-32-characters-long

# SSO (mintoku work integration)
SSO_CLIENT_ID=
SSO_CLIENT_SECRET=
SSO_REDIRECT_URI=
SSO_TOKEN_URL=
SSO_USERINFO_URL=

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# OpenAI
OPENAI_API_KEY=sk-your-api-key
OPENAI_MODEL=gpt-4o

# Google Cloud (Speech-to-Text)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_CREDENTIALS_PATH=/path/to/credentials.json

# HeyGen
HEYGEN_API_KEY=your-heygen-api-key

# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-northeast-1
S3_BUCKET_NAME=ai-interview-audio

# mintoku work API
MINTOKU_API_BASE_URL=https://api.mintoku-work.com
MINTOKU_API_KEY=your-mintoku-api-key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
